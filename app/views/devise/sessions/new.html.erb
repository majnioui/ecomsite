
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <form class="px-4 py-3">
    <div class="form-group">
      <label><%= f.label :login, class:"col-sm-2 col-form-label" %></label>
      <%= f.text_field :login, class:"form-control" %>
    </div>
    <div class="form-group">
      <label><%= f.label :password, class:"col-sm-2 col-form-label" %></label>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>
    <% if devise_mapping.rememberable? %>
    <div class="form-check">
        <%= f.check_box :remember_me, class:"form-check-input"%>
       <label> <%= f.label :remember_me, class:"form-check-label"%></label>
    </div>
    <% end %>
    <%= f.submit "Log in", class:"btn btn-primary" %>
  </form>
  <% end %>
    <a class="dropdown-item" href="#"><%= render "devise/shared/links" %></a>
