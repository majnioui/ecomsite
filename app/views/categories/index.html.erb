    <table class="table">
      <thead>
        <tr>
          <th>Categories</th>
          <th style="width: auto"><i class="bi bi-plus-circle"></i> <%= link_to 'New Category', new_category_path %></th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
              <a><i class="bi bi-pen"></i> <%= link_to 'Edit', edit_category_path(category) %></a> 
              <a><i class="bi bi-trash"></i> <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></a> 
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>